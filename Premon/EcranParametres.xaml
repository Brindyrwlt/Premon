<Window
    x:Class="Premon.EcranParametres"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Premon"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Paramètres"
    Width="400"
    Height="300"
    Background="#FFEAE1CF"
    mc:Ignorable="d" WindowStartupLocation="CenterScreen">
    <Canvas>
        <Label
            x:Name="LabelVolume"
            Canvas.Left="40"
            Canvas.Top="40"
            Width="80"
            Height="35"
            Content="Volume"
            FontSize="18" />
        <Slider
            x:Name="GlissiereVolume"
            Canvas.Left="40"
            Canvas.Top="80"
            Width="170"
            Maximum="1"
            ValueChanged="GlissiereVolume_ValueChanged"
            Value="0.5" />
        <Button
            x:Name="BoutonRetour"
            Canvas.Left="20"
            Canvas.Top="236"
            Width="50"
            Height="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BoutonRetour_Click"
            Content="Retour" />


    </Canvas>
</Window>
