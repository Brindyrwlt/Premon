<Window x:Class="Premon.EcranAccueil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Premon"
        mc:Ignorable="d"
        Title="EcranAccueil" Height="500" Width="400">
    <Grid>
        <Button x:Name="BoutonNouvellePartie" Content="Nouvelle partie" HorizontalAlignment="Center" Margin="0,85,0,0" VerticalAlignment="Top" Width="200" Height="75" FontSize="20" Click="BoutonNouvellePartie_Click"/>
        <Button x:Name="BoutonChargerPartie" Content="Charger la partie" HorizontalAlignment="Center" Margin="0,182,0,0" VerticalAlignment="Top" Width="200" Height="75" FontSize="20" Click="BoutonChargerPartie_Click"/>
        <Button x:Name="BoutonParametres" Content="Paramètres" HorizontalAlignment="Center" Margin="0,281,0,0" VerticalAlignment="Top" Width="200" Height="75" FontSize="20"/>
        <Button x:Name="BoutonQuitter" Content="Quitter le jeu" HorizontalAlignment="Center" Margin="0,383,0,0" VerticalAlignment="Top" Width="200" Height="75" FontSize="20"/>

    </Grid>
</Window>
